#include <iostream>
#include <algorithm>

using namespace std;

int main() {
    const int size = 5;
    int arr[size] = {4, 2, 8, 1, 6};

    // Using std::sort to sort the array
    sort(arr, arr + size);

    // Displaying the sorted array
    cout << "Sorted Array: ";
    for (int i = 0; i < size; ++i) {
        cout << arr[i] << " ";
    }

    return 0;
}
